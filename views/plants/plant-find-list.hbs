<div class="container mx-auto p-4">
	<div class="text-center">
		<h1 class="text-2xl font-bold mb-4">Name: {{this.name}}</h1>
	</div>
	<img src="{{this.takenImage}}" alt="" class="small-preview mb-4 mx-auto">
	<hr class="my-4">
	<h2 class="text-xl font-bold mb-8">Similar Plants</h2>

	<div class="flex flex-wrap mx-4">
		{{#each similarPlants}}
		<div class="md:w-1/3 px-4 mb-4"> <!-- Use md:w-1/3 on larger screens -->
			<div class="bg-white rounded-lg shadow-md p-4 flex">
				<div class="w-1/2 flex flex-col justify-center">
					<h2 class="text-lg font-semibold">{{this.scientificName}}</h2>
					<h3 class="text-sm text-gray-600 mb-2">Matching Score: {{score}}</h3>
					<h3 class="text-base">{{this.organ}}</h3>
				</div>
				<div class="w-1/2">
					<img src="{{this.images}}" alt="" class="small-preview mt-2 mx-auto">
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>